<html>
<head>
  <title>Account: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'edit' %>
  <%= stylesheet_link_tag 'nav' %>
  <%= stylesheet_link_tag 'admin' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "rico.js" %>
  <%= javascript_include_tag "edit_gs" %>
</head>

<% if controller.action_name == "index" 
    eAction = "list"
   else 
    eAction = controller.action_name
   end
%>
<body class="<%= controller.controller_name %> <%= eAction %>">
<div id="feedback" style="display:none;"></div>
<div id="divNav">
<%= render_partial "layouts/navigation" %>
</div>

<div id="divUser"><%= render_partial "layouts/user", @user %>
</div>

<div id="mainContent">
<div id="content">

<div class="notice"><%= flash['notice'] %></div>

<%= @content_for_layout %>
</div>
</div>
</body>
</html>
